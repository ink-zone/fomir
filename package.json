{
  "name": "fomir-root",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "workspaces": {
    "packages": [
      "packages/*",
      "example",
      "website"
    ]
  },
  "scripts": {
    "dev": "lerna run --stream dev",
    "build": "lerna run --stream build",
    "test": "lerna run --parallel --stream test",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "prepare": "husky install",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "eslintConfig": {
    "extends": "tie-app"
  },
  "lint-staged": {
    "*.{ts,tsx}": "yarn coveralls",
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forsigner/fomir.git"
  },
  "author": "@forsigner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/forsigner/fomir/issues"
  },
  "homepage": "https://github.com/forsigner/fomir#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^27.4.0",
    "@types/prettier": "^2.4.3",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.11",
    "coveralls": "^3.1.1",
    "eslint-config-tie-app": "^2.30.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "lint-staged": "^12.2.0",
    "prettier": "^2.7.1",
    "ts-jest": "^27.1.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {}
}
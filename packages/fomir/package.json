{
  "name": "fomir",
  "version": "0.20.0",
  "description": "A form base on schema",
  "author": "forsigner",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "type-check": "tsc",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forsigner/fomir.git"
  },
  "bugs": {
    "url": "https://github.com/forsigner/fomir/issues"
  },
  "homepage": "https://github.com/forsigner/fomir#readme",
  "dependencies": {
    "array-move": "^3.0.1",
    "is-promise": "^4.0.0",
    "react-fast-compare": "^3.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@types/is-promise": "^2.2.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/react-test-renderer": "^18.0.0",
    "babel-loader": "^9.1.2",
    "jest": "^29.4.1",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.0.5",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "treeshake": true,
    "sourcemap": true,
    "minify": false,
    "clean": true,
    "dts": true,
    "splitting": false,
    "format": [
      "cjs",
      "esm"
    ],
    "external": [
      "react",
      "array-move",
      "is-promise",
      "react-fast-compare"
    ]
  }
}